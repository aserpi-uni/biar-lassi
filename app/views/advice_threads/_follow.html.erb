<% if current_consumer.follow?(@advice_thread) %>
  <%= button_to t(:unfollow), follow_advice_thread_path(@advice_thread), class: 'btn btn-danger btn-raised', form_class: 'form-delete' %>
<% else %>
  <%= button_to t(:follow), follow_advice_thread_path(@advice_thread), class: 'btn btn-primary btn-raised', form_class: 'form-delete' %>
<% end %>
