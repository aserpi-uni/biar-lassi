<% provide :title, t(:resource_new, resource: Comment.model_name.human) %>

<%= render partial: 'errors', locals: { resource: @comment } %>

<ol class="breadcrumb">
  <%= render partial: 'breadcrumbs', locals: { comment: @comment } %>

  <%= render partial: 'application/breadcrumbs/finale', locals: { string: t(:resource_new, resource: Comment.model_name.human) } %>
</ol>

<div class="jumbotron align-items-center">
  <div class="col-6 mx-auto" >
    <h2>
      <%= t(:resource_create, resource: Comment.model_name.human) %>
    </h2>

    <%= form_with model: @comment, url: (@comment.domain.is_a?(ProblemThread) ? problem_thread_comments_url : advice_thread_comments_url), local: true do |f| %>
      <%= render partial: 'application/forms/content', locals: { form: f } %>

      <%= render partial: 'application/forms/submit', locals: { form: f, locale: :create } %>
    <% end %>
  </div>
</div>
