<% provide :title, @consumer.username %>

<%-# post editing form part -%>

<% if false %>

<% if logged_in? %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="post_form">
          <%= render 'shared/post_form' %>
        </section>
      </aside>
    </div>
    <%end%>
<%end%>

<%-# posts dedicated part -%>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>

        <%= render partial: 'application/avatar', locals: {size:50} %>

        <%= @consumer.username %>
      </h1>
    </section>
    <section class="user_stats">
      <%=render 'stats'%>
    </section>
  </aside>
  <div class="col-md-8">

    <!--

    <% if @consumer.feed.any? %>

        <ul class="feed">
          <%= render 'feed' %>
        </ul>

    <% end %>
    -->

    <div class="col-md-8">
      <% if @consumer.problem_threads.any? %>
          <div class="row">
            <h3>
              <%= t :problem_threads_header, number: @consumer.problem_threads.count %>
            </h3>

          </div>

          <ol class="problem_threads">
            <%= render @problem_threads %>
          </ol>

          <% will_paginate @problem_threads%>
      <% end %>
    </div>
    <div class="col-md-8">
      <% if @consumer.advice_threads.any? %>
          <div class="row">
            <h3>
              <%= t :advice_threads_header, number: @consumer.advice_threads.count %>
            </h3>

          </div>

          <ol class="advice_threads">
            <%= render @advice_threads %>
          </ol>

          <% will_paginate @problem_threads%>
      <% end %>
    </div>
  </div>
</div>


