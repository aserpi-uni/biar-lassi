<% provide :title, @consumer.username %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= link_to user_path(current_user) do%>
            <%= render partial: 'application/avatar', locals: {size:50} %>
        <% end %>
        <%= @consumer.username %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @consumer.posts.any? %>
        <h3>Posts (<%= @consumer.posts.count %>)</h3>
        <ol class="posts">
          <%= render @posts %>
        </ol>
        <%= will_paginate @posts %>
    <% end %>
  </div>
</div>
<%= debug @consumer %>

