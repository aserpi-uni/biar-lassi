<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Model</th>
      <th>Description</th>
      <th>Production year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image.url(:medium)%></td>
        <td><%= product.enterprise.name%></td>
        <td><%= product.model %></td>
        <td><%= product.description %></td>
        <td><%= product.production_year %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: "btn btn-primary" %>





<div class = "row">
  <% @products.each do |product|%>
    <div class = "col-sm-6 col-md-3">
      <div class = "img-thumbnail">
        <%=link_to (image_tag product.image.url(:medium), class: "image"), product%>
        <div class="caption">
          <h3>
            <%=link_to product.enterprise.name, product.enterprise%>
            <%=link_to product.model, product%>
            </h3>
          <p>
          <tr>
            <td><%= link_to 'Show', product %></td>
            <td><%= link_to 'Edit', edit_product_path(product) %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          </p>
        </div>
      </div>
    </div>
  <%end%>
</div>










