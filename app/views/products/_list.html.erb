<div class = "row">
  <% @products.each do |product|%>
    <span class="border border-primary col-sm-6 col-md-3 mx-2 mb-5">
        <%=link_to((image_tag product.image_url(:small), class: 'image col-12 mx-auto my-2'), product) %>
      <div class="caption col-12">
        <h3 class="col-12">
          <%=link_to product.enterprise.name, product.enterprise%>
          <%=link_to product.model, product%>
        </h3>
      </div>
      </span>
  <%end%>
</div>

<%= will_paginate @products, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>

<% if @products.empty? %>
  <h3>
    <%= t(:results_no) %>
  </h3>
<% end %>
