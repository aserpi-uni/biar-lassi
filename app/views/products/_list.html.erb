<div class = "row">
  <% @products.each do |product|%>
    <div class="col-sm-6 col-md-3 mb-5">
      <div class="img-thumbnail">
        <%=link_to (image_tag product.image.url(:medium), class: 'image'), product %>
        <div class="caption">
          <h3>
            <%=link_to product.enterprise.name, product.enterprise%>
            <%=link_to product.model, product%>
          </h3>
        </div>
      </div>
    </div>
  <%end%>
</div>

<%= will_paginate @products, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
