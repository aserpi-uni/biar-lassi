<% provide :title, t(:password_reset) %>

<%= devise_error_messages! %>

<div class="jumbotron align-items-center">
  <div class="col-6 mx-auto" >

    <h2>
      <%= t :password_change %>
    </h2>

    <%= form_with model: resource, as: resource_name, url: password_path(resource_name), local: true do |f| %>

      <%= f.hidden_field :reset_password_token %>

      <%= render partial: 'application/forms/password', locals: { form: f, min_length: @minimum_password_length } %>

      <%= render partial: 'application/forms/password_confirmation', locals: { form: f } %>

      <%= render partial: 'application/forms/submit', locals: { form: f, locale: :change } %>
    <% end %>

    <%= render 'devise/shared/links' %>

  </div> <!-- col-6 -->
</div> <!-- jumbotron -->
