<% provide :title, t(:password_forgotten) %>

<%= devise_error_messages! %>

<div class="jumbotron align-items-center">
  <div class="col-6 mx-auto" >
    <h2>
      <%= t :password_forgot %>
    </h2>

    <%= form_with model: resource, as: resource_name, url: password_path(resource_name), local: true do |f| %>
      <%= render partial: 'application/forms/username', locals: { form: f } %>

      <%= render partial: 'application/forms/submit', locals: { form: f, locale: :send} %>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div> <!-- col-6 -->
</div> <!-- jumbotron -->
