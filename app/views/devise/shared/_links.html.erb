<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t(:password_forgot), new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t(:confirmation_lost), new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t(:unlock_lost), new_unlock_path(resource_name) %><br />
<% end -%>

<% if devise_mapping.omniauthable? %>
    <%= link_to omniauth_authorize_path(:consumer, :facebook) do %>
        <%= image_tag 'facebook-login.png', class: 'mt-3' %>
    <% end %>
<% end %>