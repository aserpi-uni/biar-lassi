<% provide :title, t(:sign_up) %>

<%= devise_error_messages! %>

<!-- labels are :consumer_xxx because only the Consumer model uses this view -->

<div class="jumbotron align-items-center">
  <div class="col-6 mx-auto" >

    <h2><%= t :sign_up %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <fieldset class="row align-items-center">
          <div class="col-1">
            <%= fa_icon('user fw', class: 'mt-4') %>
          </div>
          <div class="form-group bmd-form-group col">
            <%= f.text_field :username, class: 'form-control' %>
            <%= label_tag :consumer_username, :Username, class: 'bmd-label-floating'%>
          </div>
        </fieldset>

        <fieldset class="row align-items-center">
          <div class="col-1">
            <%= fa_icon('envelope fw', class: 'mt-4') %>
          </div>
          <div class="form-group bmd-form-group col" >
            <%= f.email_field :email,  class: 'form-control'%>
            <%= label_tag :consumer_email, :Email, class: 'bmd-label-floating'%>
          </div>
        </fieldset>

        <fieldset class="row align-items-center">
          <div class="col-1">
            <%= fa_icon('key fw', class: 'mt-4') %>
          </div>
          <div class="form-group bmd-form-group col" >
            <%= f.password_field :password, autocomplete: 'off', class: 'form-control'%>
            <%= label_tag :password, :Password, class: 'bmd-label-floating'%>
          </div>
        </fieldset>

        <fieldset class="row align-items-center">
          <div class="col-1">
            <%= fa_icon('level-up fw', class: 'mt-4') %>
          </div>
          <div class="form-group bmd-form-group col" >
            <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'%>
            <%= label_tag :password_confirmation, :Confirm, class: 'bmd-label-floating'%>
          </div>
        </fieldset>



        <div class="actions">
          <%= f.submit t(:sign_up), class: 'btn btn-primary btn-raised mt-3' %>
        </div>

    <% end %> <!-- form -->

    <%= render 'devise/shared/links' %>

  </div> <!-- col-6 -->

</div> <!-- jumbotron -->
