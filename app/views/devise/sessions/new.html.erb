<% provide :title, t(:sign_in) %>

<div class="jumbotron align-items-center">
  <div class="col-6 mx-auto" >
    <h2>
      <%= t :sign_in %>
    </h2>

    <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
      <%= render partial: 'application/forms/username', locals: { form: f } %>

      <%= render partial: 'application/forms/password', locals: { form: f } %>

      <% if devise_mapping.rememberable? %>
        <fieldset class="row align-items-center">
          <div class="col-1">
            <%= fa_icon('unlock fw', class: 'mt-4') %>
          </div>
          <div class="checkbox col ml-3">
            <%= label_tag :remember_me do %>
                <%= f.check_box :remember_me, id: :remember_me %>
                <%= t(:remember_me) %>
            <% end %>
          </div>
        </fieldset>
      <% end %>

      <%= f.submit t(:sign_in), class: 'btn btn-primary btn-raised mt-3' %>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div> <!-- col-6 -->
</div> <!-- jumbotron -->