<% provide :title, t(:sign_in) %>

<div class="jumbotron align-items-center">
  <div class="col-6 mx-auto" >

    <h2><%= t :sign_in %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <fieldset class="row align-items-center">
        <div class="col-1">
          <%= fa_icon('user fw', class: 'mt-4') %>
        </div>
        <div class="form-group bmd-form-group col">
          <%= f.text_field :username, class: 'form-control' %>
          <%= label_tag "#{resource.class.name.downcase}_username", :Username, class: 'bmd-label-floating' %>
        </div>
      </fieldset>

      <fieldset class="row align-items-center">
        <div class="col-1">
          <%= fa_icon('key fw', class: 'mt-4') %>
        </div>
        <div class="form-group bmd-form-group col" >
          <%= f.password_field :password, autocomplete: 'off', class: 'form-control'%>
          <%= label_tag :password, :Password, class: 'bmd-label-floating'%>
        </div>
      </fieldset>

      <% if devise_mapping.rememberable? %>
        <fieldset class="row align-items-center">
          <div class="col-1">
            <%= fa_icon('unlock fw', class: 'mt-4') %>
          </div>
          <div class="checkbox col ml-3">
            <%= f.label :remember_me do %>
                <%= f.check_box :remember_me %>
                <%= 'Remember me' %>
            <% end %>
          </div>
        </fieldset>
      <% end %>

      <%= f.submit t(:sign_in), class: 'btn btn-primary btn-raised mt-3' %>
    <% end %>

    <%= render 'devise/shared/links' %>

  </div> <!-- col-6 -->

</div> <!-- jumbotron -->