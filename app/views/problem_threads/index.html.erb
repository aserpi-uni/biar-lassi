<p id="notice"><%= notice %></p>

<h1>Problem Threads</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @problem_threads.each do |problem_thread| %>
      <tr>
        <td><%= problem_thread.title %></td>
        <td><%= problem_thread.content %></td>
        <td><%= link_to 'Show', problem_thread %></td>
        <td><%= link_to 'Edit', edit_problem_thread_path(problem_thread) %></td>
        <td><%= link_to 'Destroy', problem_thread, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Problem Thread', new_problem_thread_path %>
