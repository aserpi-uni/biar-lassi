<% provide :title, "#{t(:problem_threads_of)} #{@product.model}" %>

<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <%= link_to @product.enterprise.name, enterprise_path(@product.enterprise) %>
  </li>
  <li class="breadcrumb-item">
    <%= link_to t(Product.model_name.human(count: 500).capitalize), products_enterprise_path(@product.enterprise) %>
  </li>
  <li class="breadcrumb-item">
    <%= link_to @product.model, product_path(@product) %>
  </li>
  <li class="breadcrumb-item active">
    <%= ProblemThread.model_name.human(count: 500).capitalize %>
  </li>
</ol>

<div class="jumbotron py-4">
  <div class="row">
    <h2 class="mb-3">
      <%= t(:problem_threads_of) %>
      <%= link_to @product.model, product_path(@product) %>
    </h2>
    <% if policy(ProblemThread).create? %>
      <%= button_to t(:resource_new, resource: ProblemThread.model_name.human), new_product_problem_thread_path(@product), method: :get, class: 'btn btn-primary btn-raised ml-2' %>
    <% end %>
  </div>

  <%= render partial: 'list', locals: { problem_threads: @product.problem_threads.order(:created_at).page(params[:page]) } %>
</div>
