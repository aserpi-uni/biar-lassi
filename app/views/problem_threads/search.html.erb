<% provide :title, @search %>

<ol class="breadcrumb">
  <%= render partial:'products/breadcrumbs', locals: { product: @product} %>

  <%= render partial:'application/breadcrumbs/product', locals: { product: @product} %>

  <%= render partial: 'application/breadcrumbs/problem_threads', locals: { product: @product} %>

  <%= render partial: 'application/breadcrumbs/finale', locals: { string: @search } %>
</ol>


<div class="jumbotron py-4">
  <h2 class="mb-3">
    <%= t(:results_for_search, count: @problem_threads.count, resource: ProblemThread.model_name.human(count: @problem_threads.count), string: @search) %>
  </h2>

  <%= render partial: 'application/search', locals: { url: search_product_problem_threads_path(@product) } %>

  <%= render partial: 'list', locals: { problem_threads: @problem_threads } %>
</div>
