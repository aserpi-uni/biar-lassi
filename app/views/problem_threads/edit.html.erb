<% provide :title, t(:resource_edit, name: ProblemThread.model_name.human) %>

<%= render partial: 'errors', locals: { resource: @problem_thread } %>

<div class="jumbotron align-items-center">
  <div class="col-6 mx-auto" >
    <h2>
      <%= t :resource_edit, name: ProblemThread.model_name.human %>
    </h2>

    <%= form_with model: @problem_thread, metod: :put, local: true do |f| %>
      <%= render partial: 'application/forms/title', locals: { form: f } %>

      <%= render partial: 'application/forms/content', locals: { form: f, } %>

      <%= render partial: 'application/forms/submit', locals: { form: f, locale: :save } %>
    <% end %>
  </div> <!-- col-6 -->
</div> <!-- jumbotron -->
