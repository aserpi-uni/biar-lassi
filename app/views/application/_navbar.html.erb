<nav class="navbar sticky-top navbar-expand-md navbar-dark bg-dark">
  <div class="container-fluid">

    <%= link_to root_path, class: 'navbar-brand' do %>
        <%= fa_icon 'comments' %>
        <%= t :uservoice %>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <form class = 'navbar-form navbar-left' role = 'search'>
      <div class = "form-group">
        <input type = 'text' class = 'form-control' placeholder= "Search by product">
      </div>
      <button type = "submit" class = "btn btn-default">Submit</button>
    </form>

    <div id="navbarNavDropdown" class="navbar-collapse collapse">
      <ul class="navbar-nav ml-auto">

        <% if current_user.nil? %>
          <%= render partial: 'application/navbar/no_user' %>
        <% else %>
          <% if current_user.is_a? Admin %>
            <%= render partial: 'application/navbar/admin_create_menu' %>
          <% elsif !current_employee.nil? and current_employee.supervisor? %>
            <%= render partial: 'application/navbar/employee_supervisor_menu' %>
          <% end %>
          <%= render partial: 'application/navbar/user_menu' %>
        <% end %>

      </ul> <!-- right elements -->
    </div> <!-- collapsable -->
  </div> <!-- container-fluid -->
</nav>
