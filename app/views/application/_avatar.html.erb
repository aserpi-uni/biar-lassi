<% description ||= t(:avatar).downcase %>
<% if current_employee && !current_employee.enterprise.send("avatar_#{current_employee.role}").blank? %>
    <%= image_tag current_employee.enterprise.send("avatar_#{current_employee.role}"), alt: description, height: size, width: size %>
<% else %>
    <%= image_tag "https://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(current_user.email.blank? ? current_user.username : current_user.email)}?s=#{size}&d=identicon",
                  alt: description %>
<% end %>
